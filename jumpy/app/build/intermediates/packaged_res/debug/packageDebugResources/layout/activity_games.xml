<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🎮 Games"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play with friends"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:alpha="0.8" />

    </LinearLayout>

    <!-- Games Grid -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true">

        <!-- Tic Tac Toe Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/tic_tac_toe_card"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_columnWeight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/tic_tac_toe_gradient">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⭕❌"
                    android:textSize="32sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tic Tac Toe"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Classic XO Game"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.8" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Ludo Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/ludo_card"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_columnWeight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/ludo_gradient">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🎲"
                    android:textSize="32sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ludo King"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Family Board Game"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.8" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- UNO Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/uno_card"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_columnWeight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/uno_gradient">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🃏"
                    android:textSize="32sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UNO!"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Card Game"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.8" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Chess Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/chess_card"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_columnWeight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/chess_gradient">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="♔♕"
                    android:textSize="32sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chess"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Strategy Game"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.8" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </GridLayout>

    <!-- Game Modes Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:background="@drawable/info_card_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎯 Game Modes Available"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• VS Computer (AI)\n• Online Multiplayer\n• Play with Friends\n• Global Players"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:alpha="0.9"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

</LinearLayout> 