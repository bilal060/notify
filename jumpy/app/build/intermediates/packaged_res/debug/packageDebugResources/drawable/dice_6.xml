<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Dice background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="@android:color/black" />
        </shape>
    </item>
    
    <!-- Top row - left dot -->
    <item android:gravity="top|left" android:left="16dp" android:top="16dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/black" />
            <size android:width="12dp" android:height="12dp" />
        </shape>
    </item>
    
    <!-- Top row - center dot -->
    <item android:gravity="top|center_horizontal" android:top="16dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/black" />
            <size android:width="12dp" android:height="12dp" />
        </shape>
    </item>
    
    <!-- Top row - right dot -->
    <item android:gravity="top|right" android:right="16dp" android:top="16dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/black" />
            <size android:width="12dp" android:height="12dp" />
        </shape>
    </item>
    
    <!-- Bottom row - left dot -->
    <item android:gravity="bottom|left" android:left="16dp" android:bottom="16dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/black" />
            <size android:width="12dp" android:height="12dp" />
        </shape>
    </item>
    
    <!-- Bottom row - center dot -->
    <item android:gravity="bottom|center_horizontal" android:bottom="16dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/black" />
            <size android:width="12dp" android:height="12dp" />
        </shape>
    </item>
    
    <!-- Bottom row - right dot -->
    <item android:gravity="bottom|right" android:right="16dp" android:bottom="16dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/black" />
            <size android:width="12dp" android:height="12dp" />
        </shape>
    </item>
    
</layer-list> 